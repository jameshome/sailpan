import gql from "graphql-tag";

const REPORTS_QUERY = gql`
query Reports {
  reports(sort: "reported_at:desc") {
    id
    category
    brief
    detail
    reported_at
    conditions {
      id
      name
    }
    locations {
      id
      name
      type
      status
      latitude
      longitude
    }
    reporters {
      id
      name
      url
    }
  }
}
`;
export default REPORTS_QUERY;
