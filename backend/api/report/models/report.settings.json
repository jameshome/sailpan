{
  "kind": "collectionType",
  "collectionName": "reports",
  "info": {
    "name": "Report"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "conditions": {
      "collection": "report-category",
      "via": "reports",
      "dominant": true
    },
    "locations": {
      "collection": "location",
      "via": "reports",
      "dominant": true
    },
    "detail": {
      "type": "richtext"
    },
    "reporters": {
      "collection": "reporter",
      "via": "reports",
      "dominant": true
    },
    "reported_at": {
      "type": "datetime"
    },
    "brief": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "boat_report",
        "marina_announcement",
        "official_notice",
        "local_knowledge",
        "unicorn_chaser"
      ]
    },
    "notes": {
      "type": "text",
      "private": true
    },
    "documentation": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "region": {
      "model": "region",
      "via": "reports"
    }
  }
}
