{
  "kind": "collectionType",
  "collectionName": "reports",
  "info": {
    "name": "Report"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "conditions": {
      "via": "reports",
      "collection": "report-category",
      "dominant": true
    },
    "locations": {
      "via": "reports",
      "collection": "location",
      "dominant": true
    },
    "detail": {
      "type": "richtext"
    },
    "reporters": {
      "collection": "reporter",
      "via": "reports",
      "dominant": true
    },
    "reported_at": {
      "type": "datetime"
    },
    "brief": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "boat_report",
        "marina_announcement",
        "official_notice"
      ]
    }
  }
}
